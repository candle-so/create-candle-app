{
  "extends": "next",
  "globals": {
    "JSX": true
  },
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "@next/next/no-img-element": "off",
    "react-hooks/exhaustive-deps": "off",
    "react/display-name": "off",
    // "no-unused-vars": 1,
    "unused-imports/no-unused-imports": "error",
    "import/no-anonymous-default-export": "off",
    "no-undef": 2,
    "no-console": 1
  },
  "plugins": ["testing-library", "unused-imports"]
}
